# App
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3002
NEXTAUTH_SECRET=<generate-random-64-char-string>
NEXTAUTH_URL=http://localhost:3002
AUTH_URL=http://localhost:3002

# Database
POSTGRES_DB=toutopia
POSTGRES_USER=toutopia
POSTGRES_PASSWORD=<your-db-password>
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5433/${POSTGRES_DB}

# Redis
REDIS_PASSWORD=<your-redis-password>
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6380

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=<your-minio-access-key>
MINIO_SECRET_KEY=<your-minio-secret-key>
MINIO_BUCKET=uploads

# Admin Seed
ADMIN_PASSWORD=<your-admin-password>

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Midtrans
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# Email
RESEND_API_KEY=
EMAIL_FROM=noreply@toutopia.id

# Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@toutopia.id
